<header>
  <div id="token" style="display: none;">
    {{token}}
  </div>
</header>

<nav class="navbar navbar-expand-lg">
  <div class="container-fluid">
    <img src="../icono/icono.jpg" alt="Este es el icono del ecommerce" />
    <a class="navbar-brand">Reestablecer contraseña</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
      </ul>
    </div>
  </div>
</nav>

<div class="containerForm">
  {{#if expired}}
    <div class="form">
      <h1>Su token expiro</h1>
      <p class="messageForm">Vuelva a regenerar su token
        <a href="/restore">Aqui</a></p>
    </div>
  {{else}}
    <form class="form" id="changeForm">
      <h1 class="titleRestore">Reestablecer contraseña</h1>
      <label for="">contraseña: </label>
      <input id="password" type="password" name="password" />
      <p class="messageForm">Vuelva al login <a href="/login">aqui</a></p>
      <input type="submit" class="button" />
    </form>
  {{/if}}
</div>

<footer>
  <p style="text-align: center; color:whitesmoke;">
    &copy; Santiago Aquino - 2023</p>
</footer>

<script src="/js/changePassword.js"></script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>