<div class="containerProducts">
  {{#each products}}
    <div class="card" style="width: 18rem;">
      <img
        src="/img/{{this.title}}.png"
        class="card-img-top"
        alt="Imagen de la notebook de la marca {{this.title}}"
      />
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">
          <strong>descripcion:</strong>
          {{description}}
          <br />
          <strong>precio:</strong>
          {{price}}<br />
          <strong>cantidad:</strong>
          {{quantity}}<br />
        </p>
      </div>
    </div>
  {{/each}}
  <a href="/products" style="text-decoration: none;" class="button">Voler</a>
  <button class="button" id="buttonCompra">Pagar Carrito
    <i class="fa-brands fa-opencart"></i></button>
</div>

<div id="idUser" style="display: none;">
  {{user.id}}
</div>

<div id="emailUser" style="display: none;">
  {{user.email}}
</div>

